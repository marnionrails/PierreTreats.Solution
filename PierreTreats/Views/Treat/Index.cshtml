@{
  Layout = "_Layout";
}

@using PierreTreats.Models
@model List<PierreTreats.Models.Treat>

  <h2>All treats</h2>

  @if (Model.Count == 0)
  {
    <p>There are no treats yet.</p>
  }

  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}","Details", new { id = treat.TreatId})</li>
    }
  </ul>


<hr />
<ul>
  <li>@Html.ActionLink("Add a new treat","Create")</li>
  <li>@Html.ActionLink("Login/Register","Index", "Account")</li>
  <li>@Html.ActionLink("Home","Index","Home")</li>
</ul>
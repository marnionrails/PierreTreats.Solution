@{
  Layout = "_Layout";
}

@using PierreTreats.Models
@model List<PierreTreats.Models.Treat>

  <h2>All treats</h2>

  @if (Model.Count == 0)
  {
    <p>There are no treats yet.</p>
  }

<div class="row">
  <div class="col-md-6">
    <h4>All treats:</h4>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}","Details", new { id = treat.TreatId})</li>
    }
  </div>
  <div class="col-md-6">
      <h4>Your treats:</h4>
       @foreach (Treat treat in ViewBag.UserTreats)
        {
        <li>@Html.ActionLink($"{treat.Name}","Details", "Treats", new {id = treat.TreatId})</li>
        }
  </div>
</div>
  


<hr />
<ul>
  <li>@Html.ActionLink("Add a new treat","Create")</li>
  <li>@Html.ActionLink("Login/Register","Index", "Account")</li>
  <li>@Html.ActionLink("Home","Index","Home")</li>
</ul>
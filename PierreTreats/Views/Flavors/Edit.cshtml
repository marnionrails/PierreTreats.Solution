@{
  Layout = "_Layout";
}

@model PierreTreats.Models.Flavor

<h4>Edit this flavor: @Html.DisplayFor(model => model.Description)</h4>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  @Html.Label("Flavor description")
  @Html.EditorFor(model => model.Description, new { @class = "form-control", required="required"})

  <input type="submit" value="Save" class="btn btn-default" required="true" />
}

<hr />
<ul>
  <li>@Html.ActionLink("Home","Index","Home")</li>
  <li>@Html.ActionLink("See all flavors", "Index")</li>
  <li>@Html.ActionLink("See flavor details","Details", new {id = Model.FlavorId})</li>
</ul>
@{
  Layout = "_Layout";
}

@model PierreTreats.Models.Flavor

<h4>Add new flavor</h4>

@using(Html.BeginForm())
{
  @Html.Label("Flavor description")
  @Html.TextBoxFor(model => model.Description, new { @class = "form-control", required="required"})

  <input type="submit" value="Add" class="btn btn-default" required="true" />
}

<hr />
<ul>
  <li>@Html.ActionLink("Home","Index","Home")</li>
  <li>@Html.ActionLink("See all flavors", "Index")</li>
</ul>